
@{
    ViewData["Title"] = "AdminLogin";
}

<div class="row justify-content-center mt-5">

    <div class="col-md-4  border p-3 border-secondary">
        <div class="card">
            <div class="card-body bg-primary text-white">
                Admin Girişi
            </div>
        </div>
        <form asp-action="AdminLogin" asp-controller="Account" method="POST">
            <div class="text-center">
                <img src="~/images/logo.png" width="150rem" height="150rem">
            </div>

            <div class="form-group mt-2 mb-2">
                <label for="Email">Email</label>
                <input type="text" id="Email" class="form-control" name="Email">
            </div>
            <div class="form-group mt-2 mb-2">
                <label for="Password">Şifre</label>
                <input type="password" id="Password" class="form-control" name="Password">
            </div>
            <div class="border p-3">
                <button id="loginBtn" type="submit" class="btn btn-outline-primary btn-block"><i class="fas fa-sign-in-alt"></i>&nbsp;Admin Girişi</button>
                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-success btn-block"><i class="fas fa-home"></i>&nbsp;Ana Sayfaya Dön</a>
            </div>
        </form>
    </div>
</div>
