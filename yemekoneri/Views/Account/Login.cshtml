
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <form asp-action="Login" asp-controller="Account" method="POST">
            <div class="text-center">
                <img src="~/images/logo.png" width="150rem" height="150rem">
            </div>

            <div class="form-group mt-2 mb-2">
                <label for="Email">Email</label>
                <input type="text" id="Email" class="form-control" name="Email">
            </div>
            <div class="form-group mt-2 mb-2">
                <label for="Password">Şifre</label>
                <input type="password" id="Password" class="form-control" name="Password">
            </div>
            <div class="border p-3">
                <button id="loginBtn" type="submit" class="btn btn-outline-primary btn-block"><i class="fas fa-sign-in-alt"></i>&nbsp;Giriş Yap</button>
                <a href="/Account/RefreshPassword" class="btn btn-outline-danger btn-block"><i class="fas fa-key"></i>&nbsp;Şifremi Unuttum</a>
                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-success btn-block"><i class="fas fa-home"></i>&nbsp;Ana Sayfaya Dön</a>
        </form>
    </div>
</div>
    </div>
