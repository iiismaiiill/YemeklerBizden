
@{
    ViewData["Title"] = "SignIn";
}

<div class="row justify-content-center mt-5">

    <div class="col-md-4">
        <div class="card bg-success border border-secondary">
            <div class="card-body">
                <h3>Kayıt Ol</h3>
            </div>
        </div>
        <form asp-action="SignIn" asp-controller="Account">


            <div class="form-group mt-2 mb-2">
                <label for="Name">İsim</label>
                <input type="text" id="Name" class="form-control" name="Name">
            </div>
            <div class="form-group mt-2 mb-2">
                <label for="SurName">Soyadı</label>
                <input type="text" id="SurName" class="form-control" name="SurName">
            </div>
            <div class="form-group mt-2 mb-2">
                <label for="Email">Email</label>
                <input type="text" id="Email" class="form-control" name="Email">
            </div>
            <div class="form-group mt-2 mb-2">
                <label for="Password">Şifre</label>
                <input type="text" id="Password" class="form-control" name="Password">
            </div>

            <div class="border p-3">
                <button type="submit" class="btn btn-outline-primary btn-block"><i class="fas fa-sign-in-alt"></i>&nbsp;Kayıt Ol</button>
                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-success btn-block"><i class="fas fa-home"></i>&nbsp;Ana Sayfaya Dön</a>
        </form>
    </div>
</div>
    </div>